.nav
    background-color _white
    display flex
    align-items center
    justify-content space-between
    height 48px
    padding 0 21px

.nav-logo
    display flex
    align-items center

    img
        height 34px
        width 36px
        margin-right 9px

    span
        display inline-block
        text-transform uppercase
        font-size 27px
        color _black

.nav-controls
    max-width 1052px
    width 100%
    height 100%
    display flex
    align-items center
    justify-content space-between

.nav-control-buttons
    max-width 83px
    width 100%
    display flex
    justify-content space-between

.nav-control-buttons__play
    width 30px

    img
        width 100%

.nav-control-buttons__pause
    width 30px

    img
        width 100%

.slider
    width 181px
    height 100%
    display flex
    align-items center

.slider__track
    height 3px
    width 100%
    background-color _black

.slider__dot
    position absolute
    top 50%
    left 0
    transform translate3d(0, -50%, 0)
    height 18px
    width 18px
    background-color _black

.bpm-slider
    height 100%
    display flex
    align-items center

.bpm-slider__label
    font-size 27px
    color _black
    line-height 1.2
    margin-right 9px

.bpm-slider__display
    padding 0 8px 
    background-color _black
    color _yellow
    font-size 30px
    line-height 1.2
    width 54px
    text-align right
    margin-right 7px

.volume-slider
    height 100%
    display flex
    align-items center

.volume-slider__label
    font-size 27px
    color _black
    line-height 1.2
    margin-right  7px

