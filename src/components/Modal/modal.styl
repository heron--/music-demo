.modal-container
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    display flex
    align-items center
    justify-content center

.modal
    background-color _white
    padding 38px 0
    max-width 405px
    width 100%
    text-align center

.modal__copy
    padding 0 57px
    font-size 24px

.modal__input
    padding 0 57px
    margin-top 23px

    input
        margin 0
        border 1px solid _black
        padding 0 8px
        outline 0
        font-size 24px
        font-family 'VT323', monospace

        height 38px
        width 100%

.modal-controls
    margin-top 73px
    padding 0 40px
    display flex
    justify-content space-between

.modal-controls__control
    width 151px
    padding 9px 0 8px
    background-color _grey3
    font-size 24px
    color _grey1
    cursor pointer
    user-select none

    &:hover
        background-color _grey2

.modal-controls__control--angry
    background-color _red
    color _white

    &:hover
        background-color _red
        color _grey3

.modal-controls__control--happy
    background-color _green

    &:hover
        background-color _green
        color _grey2
    
.modal-palette
    margin-top 27px
    padding 0 91px
    display flex
    justify-content space-between
    aligin-content space-between
    flex-wrap wrap
    height 210px

.modal-palette__color
    width 53px
    height 50px
    border 1px solid
    cursor pointer
